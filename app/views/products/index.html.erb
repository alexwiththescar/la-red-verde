<% provide(:title, 'All the Products') %>
<br>
  



<h1>All the Fresh Produce</h1><hr>

<h3><center>

<%= grid(@products_grid, :show_filters => :always) do |g|

  g.column :name => 'Photo' do |product|
    image_tag product.pic.url(:thumb)
  end

   g.column name:  'Name', attribute: 'name'

  g.column  :name => 'Ammount', :attribute => 'ammount'do |product|
    product.ammount
  end

  g.column  :name => 'Price', :attribute => 'price'do |product|
    product.price
  end


  g.column  :name => 'Swap', :model => 'Farm', :attribute => 'swap' do |product|
    product.farm.swap? ? 'Yes' : 'No'
  end

  g.column   do |product|
    link_to('View', product_path(product))
  end
end %>
