<% provide(:title, 'All the Products') %>
<br>
  



<h1>All the Fresh Produce</h1><hr>
<div class='search'>Search All Products...
<%= form_tag products_path, method: :get do %>
    <%= text_field_tag :query, params[:query], :class => "search-query" %>

   <center> <%= submit_tag "Search", name: nil, :class => "btn btn-large btn-primary", :style => 'inline' %>
   	<%= select_tag 'swap', options_for_select(%w[ Yes No Both ] ), :selected => params[:swap_product] %>
<% end %>

<br><br>
</div>


<%= search_form_for @q, url: 'search_farm_products', method: :post do |f|%>
  <p>
    <%= f.label :name_contains %>
    <%= f.text_field :name_contains %>
  </p>
  <p class="button"><%= f.submit "Search" %></p>
<% end %>



<hr>
<div id="search_results">
 <% if @products.any? %>
    <%= render @products %>
<% else %>
    <p>
      We are sorry, No products matched your search.
    </p>
<% end %>
</div>