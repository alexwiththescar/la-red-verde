<%= provide(:title, 'Register As A Grower...') %>



<div class="row-fluid">
<div class="span6" style="margin: 0px 10px 0px 0px;">

<%= nested_form_for @farm do |f| %>
<%= render 'shared/error_messages', object: f.object %>

   <h2>Step 1 :: Describe Your Grow...</h2><center><p>Say Somthing about where and how you grow...</p></center>

    <div class="field"><br>
    <%= f.label "Farm Name (Optional)" %><br />
    <%= f.text_field :name, :placeholder => "i.e. - 'My Garden' or 'Joe´s Farm'" %>
  </div>
  <div class="field">
    <%= f.label "Type of Farm?" %><br />
   <%= f.select :farmtype, options_for_select(["Private Grower","Farm"]) %>
  </div>
  <div class="field">
  <%= f.label 'Are You Willing To Swap For Other Fresh Produce?    ' %><br>
  <%= f.radio_button :swap, true %><%= f.label 'Yes',:style => "display:inline" %><br />
  <%= f.radio_button :swap, false %><%= f.label 'No' ,:style => "display:inline"%><br />

</div><br>
  <div class="field" style="display:inline">
  <%= f.label 'Is it Organicly Grown?    ' %><br>
  <%= f.radio_button :organic, true %><%= f.label 'Yes', :style => "display:inline"  %><br />
  <%= f.radio_button :organic, false %><%= f.label 'No', :style => "display:inline"  %><br />
</div><br>
<div style="display:inline"><div class="field", style="display:inline">
  
  <%= f.label 'Can you Deliver Locally?    ' %><br>
   <%= f.radio_button :deliver, true %><%= f.label 'Yes', :style => "display:inline"  %><br />
  <%= f.radio_button :deliver, false %><%= f.label 'No', :style => "display:inline"  %><br />
</div></div><br>
<div class="field", style="display:inline">
    <%= f.label 'Say Somthing About Your Grow Spot...' %><br />
    <%= f.text_area :description, :size => "30x10" , :placeholder => "Say somthing about how you grow....(Optional)"%>
  </div>
 

  </div>


<%= f.simple_fields_for(:products) do |ff| %>

<div class="span6" style="margin: 0px 0px 0px 10px;">
<h2>Step 2 :: List A Product...</h2><center><p>Add your first product here to begin Selling, Swapping and Sharing your Produce...</p></center><br><br>

<div class="field">
    <%= ff.label 'Produce' %><br />
    <%= ff.text_field :name, :placeholder => "i.e. - 'Apples' or 'Red Rose Cuttings'" %>
  </div>
 
  <div class="field">
    <%= f.label  'How much do you have to sell?' %><br />
    <%= ff.number_field :ammount, :placeholder => "" %>
  </div>
  <div class="field">
    <%= ff.label :price, 'Price per Kilo or Unit?' %><br />
    <%= ff.number_field :price %>
  </div>

  <div class="field">
    <%= ff.label :category %><br />
   <%= ff.select :category, options_for_select(%w[ 
   Vegatables
   Fruit
   Herbs
   Edible-Flowers
   Seeds
   Seeds
   Cuttings
   Plantita´s
   Other ] )%>
  </div>

  <div class="field">
    <%= ff.label :description %><br />
    <%= ff.text_area :description, :size => "30x10", :placeholder => "Describe what you have grown..."  %>
  </div>
<div class="field">
<%= ff.label 'Attach a picture of your produce...' %>
<%= ff.file_field :image %>
<br><br><br><br><center><%= f.submit "Create Farm", class: "btn btn-large btn-primary" %>
  </div>


</div>
</div>
  

<% end %>
<%= f.label 'Attach a picture of where you grow...' %>
<%= f.file_field :image %>


</div>

<% end %>
